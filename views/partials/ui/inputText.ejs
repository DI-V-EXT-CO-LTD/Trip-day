<% const inputName = typeof name !== 'undefined' ? name : ''; 
   const inputLabel = typeof label !== 'undefined' ? label : ''; 
   const inputId = typeof id !== 'undefined' ? id : ''; 
   const inputType = typeof type !== 'undefined' ? type : 'text'; 
   const inputPlaceholder = typeof placeholder !== 'undefined' ? placeholder : ''; 
   const inputIsRequired = typeof isRequired !== 'undefined' ? isRequired : true; 
   const inputValue = typeof value !== 'undefined' ? value : "";
   const minValue = typeof min !== 'undefined' ? min : null; 
   const maxValue = typeof max !== 'undefined' ? max : null;
   const classNameValue = typeof className !== 'undefined' ? className : null;
%>

<label for="<%= inputName %>" class="block text-sm font-medium text-gray-900">
  <%= inputLabel %>
</label>

<input 
  type="<%= inputType %>" 
  id="<%= inputId %>" 
  name="<%= inputName %>"
  value="<%= inputValue %>"
  placeholder="<%= inputPlaceholder %>"
  <%= inputIsRequired ? 'required' : '' %>
  <%= inputType === 'number' && minValue !== null ? 'min='+ minValue  : '' %>
  <%= inputType === 'number' && maxValue !== null ? 'max='+ maxValue  : '' %>
  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg 
  focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 <%= classNameValue %>"
/>

